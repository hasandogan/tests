{% extends "base.html.twig" %}
{% block head %}
    {{ parent() }}
    <head>
        <title>Giriş Sayafası</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="styles.css">
    </head>
{% endblock %}
{% block body %}
    {{  parent()  }}
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-body">
                    <form method="post" action="/registerAuth">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="email" id="email"  class="form-control" name="email" type="email" placeholder="E-mail">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input  type="password" id="password1" class="form-control" name="password1" placeholder="Şifre" required>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input  type="password" id="password2" class="form-control" name="password2" placeholder="Şifre" required>
                        </div>
                    </form>
                    <div class="form-group">
                        <input type="submit" id="register"  value="Kayıt Ol" class="btn float-right login_btn">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--SweetAlert-->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
            $('#register').click(function (){
                var email = $('#email').val();
                var password1 = $('#password1').val();
                var password2 = $('#password2').val();

                if(email == ''   || password1 == '' || password2 == '' ){
                    swal({
                        title : "Alanlar Boş!!",
                        text : "Boş Alanları Doldurunuz",
                        icon : "warning",
                        button : "Tamam"
                    });
                } else if (password1 != password2) {
                    swal({
                        title : "Şifreler Uyuşmamaktadır!!",
                        text : "Girdiğiniz Şifreleri Kontrol Ediniz",
                        icon : "warning",
                        button : "Tamam"
                    });
                }else{
                    swal({
                        title : "Başarılı!!",
                        text : "Başarılı Kayıt",
                        icon : "success",
                        button : "Tamam"
                    });
                }
        });
    </script>

{% endblock %}